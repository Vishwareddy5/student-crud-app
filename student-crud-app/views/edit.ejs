    <div class="container">
    <h1>Edit Student</h1>

    <form action="/students/<%= student._id %>?_method=PUT" method="POST">
        <label>Name:</label>
        <input type="text" name="name" value="<%= student.name %>" required /><br /><br />

        <label>Roll No:</label>
        <input type="number" name="roll" value="<%= student.roll %>" required /><br /><br />

        <label>Branch:</label>
        <input type="text" name="branch" value="<%= student.branch %>" /><br /><br />

        <button type="submit">Update</button>
    </form>

